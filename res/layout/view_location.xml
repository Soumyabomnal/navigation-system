<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/home_scroll" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">


<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" 
>


	<LinearLayout android:orientation="vertical"
	                  android:layout_width="fill_parent"
	                  android:layout_height="wrap_content"
	                  android:background="#000000"
	                  android:gravity="center"
	>
	       <TextView android:text="View Current GPS Location"
	                 android:textColor="#ffffff"
	                 android:layout_width="wrap_content"
	                 android:layout_height="35px"
	                 android:textSize="25sp"
	                 android:gravity="center|top"
	                 
	      />
	</LinearLayout>  
	
   
                 
	<TextView 
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/cout_down"
                 android:text=""
                 android:textColor="#82FA58"
                 android:textSize="35px"
                 android:textStyle="bold"
                 android:layout_marginTop="5px"
                 android:gravity="center"
                 android:layout_gravity="center"
                  
	 />
       			
    
	<TextView 
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/updated_value"
                 android:text=""
                 android:textColor="#ffffff"
                 android:textSize="21px"
                 android:textStyle="bold"
                 android:layout_marginTop="25px"
                 android:gravity="center"
                 android:layout_gravity="center"
                  
	/>
	
	
   <TableLayout 	
				    android:orientation="vertical"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:stretchColumns="1"
				    android:layout_marginLeft="5px"
				    android:gravity="center"
    >
	   
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
                 
        >
                 
       			<TextView 
       			           android:layout_width="125px"
                           android:layout_height="wrap_content"
                           android:text="Current Location : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/cur_loc"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Jayanagar"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>
       
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
                 
        >
                 
       			<TextView 
       			           android:layout_width="125px"
                           android:layout_height="wrap_content"
                           android:text="Current Latitude : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/cur_latitude"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="12.932459"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
                 
        >
                 
       			<TextView 
       			           android:layout_width="125px"
                           android:layout_height="wrap_content"
                           android:text="Current Longitude : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/cur_longitude"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="77.587925"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>    
           
       
   </TableLayout>
   
       
     <TextView
	              android:id="@+id/loc_exception"
	              android:layout_width="fill_parent"
	              android:layout_height="fill_parent"
	              android:textSize="14px"
	              android:textStyle="bold"
	              android:textColor="#ff00ff"
	              android:text=""
              
              	  android:gravity="center"
                  android:layout_gravity="center"
      >
     </TextView>
             
    
     <Button
              android:id="@+id/manage_service"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="STOP"
              android:gravity="center"
        	  android:layout_gravity="center"
        	  android:layout_marginTop="35px"
      >
    </Button>
             
       
	       	

</LinearLayout>
</ScrollView>