<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/home_scroll" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="#000000"
                  android:gravity="center"
                 >
       <TextView android:text="View Device Battery Information"
                 android:textColor="#ffffff"
                 android:layout_width="wrap_content"
                 android:layout_height="35px"
                 android:textSize="21sp"
                 android:gravity="center|top"
                 
                 />
    </LinearLayout>
    
    <TableLayout 	xmlns:android="http://schemas.android.com/apk/res/android"
				    android:orientation="vertical"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:stretchColumns="1"
				    android:layout_marginLeft="5px"
				    android:gravity="center"
    >
      
         <TableRow android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="14px"
                   android:gravity="center"
                 
        >
                 
       			<ImageView
					        android:id="@+id/view_battery"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:src="@drawable/battery_icon1" 
					        android:gravity="center"
					        android:layout_gravity="center"
					        android:layout_marginTop="10px"
				/>
       			
       </TableRow>
        
        <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
                 
        >
                 
       			<TextView 
       			           android:layout_width="120px"
                           android:layout_height="wrap_content"
                           android:text="Battery Helth : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/battery_health"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Good"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>
        
        <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
         >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Battery Level : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/battery_level"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="50 %"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
       >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Battery Status : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/battery_status"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Charging"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
       >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Plugged On : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/battery_pluggedon"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="AC Charger"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>  
       
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
       >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Battery Scale : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/batteryScale"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="100"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>     
         
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
        >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Technology : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/batteryTechnology"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Li-ion"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>   
       
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
       >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Temperature : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/batteryTemperature"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="0"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>    
           
       
       <TableRow android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14px"
                 android:gravity="center"
       >
                 
       			<TextView 
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="Voltage : "
                           android:textColor="#ffffff"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="0px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       			 
       			<TextView 
       			           android:id="@+id/batteryVoltage"
       			           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:text="0"
                           android:textColor="#000000"
                           android:textSize="14px"
                           android:textStyle="bold"
                           android:layout_marginLeft="1px"
                           
                           android:gravity="center"
					       android:layout_gravity="center"
       			 />
       			
       </TableRow>
       
       
        
    </TableLayout>
    
    <LinearLayout android:orientation="vertical"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 >
        <TextView
                 android:id="@+id/exception"
                 android:layout_x="10px"
                 android:layout_y="375px"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:textSize="14px"
                 android:textStyle="bold"
                 android:textColor="#ff00ff"
                 android:text=""
                 
                 android:gravity="center"
		         android:layout_gravity="center"
         >
                
      </TextView>
             
    </LinearLayout>
    
    
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  
     >
        <Button
                 android:id="@+id/ok_done"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="OK"
                 android:gravity="center"
		         android:layout_gravity="center"
		         android:layout_marginTop="50px"
         >
                
      </Button>
             
    </LinearLayout>    
    
    
</LinearLayout>
</ScrollView>